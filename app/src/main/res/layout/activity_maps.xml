<?xml version="1.0" encoding="utf-8"?>
<fragment xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/map"
    android:name="com.google.android.gms.maps.SupportMapFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapsActivity" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:drawableTop="@drawable/smallest_plus"
        android:onClick="addButtonPressed"
        android:background="#0000">
    </Button>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:text="@string/filter"
        android:textColor="#0000FF"
        android:padding="30dp"
        android:layout_marginEnd="60dp"
        android:drawableTop="@drawable/filter_icon"
        android:background="#0000"
        android:onClick="filterButtonPressed"
        >
    </Button>

    <LinearLayout android:id="@+id/cardView"
        android:layout_height="wrap_content" style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:background="@color/blueMapWith80Transparent"
        >
        <TextView android:text="First" android:id="@+id/tdsText"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_gravity="start"
            tools:ignore="HardcodedText"
            android:textSize="25sp"
            android:padding="10dp"
            />
        <!--            android:layout_alignParentLeft = "true"
                    android:layout_alignParentRight = "true"
        -->
        <TextView android:textColor="#fff"

            android:text="Second"
            android:layout_height="wrap_content"
            android:id="@+id/distanceText"
            android:layout_width="wrap_content"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText"
            android:textSize="25sp"
            android:layout_gravity="end"
            android:padding="10dp"
            />

    </LinearLayout>

</fragment>